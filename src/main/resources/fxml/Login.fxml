<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.PosPrueba.View.Ui.LoginController"
      alignment="CENTER"
      spacing="20"
      prefWidth="400"
      prefHeight="500"
      styleClass="login-container">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Logo / Título -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="Sistema POS" styleClass="login-title">
            <font>
                <Font name="System Bold" size="32"/>
            </font>
        </Label>
        <Label text="Punto de Venta" styleClass="login-subtitle">
            <font>
                <Font size="16"/>
            </font>
        </Label>
    </VBox>

    <VBox spacing="5">
        <Label text="Usuario:" styleClass="login-label"/>
        <TextField fx:id="txtUsername" promptText="Ingrese su usuario" styleClass="login-field"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Contraseña:" styleClass="login-label"/>
        <PasswordField fx:id="txtPassword" promptText="Ingrese su contraseña" styleClass="login-field"/>
    </VBox>

    <Label fx:id="lblError" text="Error message" styleClass="error-label" visible="false" wrapText="true"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnLogin" text="Iniciar Sesión" onAction="#onLogin" styleClass="btn-primary" prefWidth="150"/>
        <Button text="Cancelar" onAction="#onCancelar" styleClass="btn-secondary" prefWidth="150"/>
    </HBox>

    <VBox.margin>
        <Insets top="20"/>
    </VBox.margin>
</VBox>
