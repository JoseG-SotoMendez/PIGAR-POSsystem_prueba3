<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.PosPrueba.View.Ui.ClientesController"
            styleClass="clientes-container">

    <!-- ✅ Agregar stylesheets AQUÍ -->
    <stylesheets>
        <URL value="@../styles/styles.css"/>
    </stylesheets>

    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>

            <Label text="Gestión de Clientes" styleClass="page-title">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="txtBusqueda" promptText="Buscar por nombre, documento o teléfono..." prefWidth="400"/>
                <Button fx:id="btnNuevo" text="Nuevo Cliente" onAction="#onNuevo" styleClass="btn-primary"/>
            </HBox>
        </VBox>
    </top>

    <!-- ... resto del contenido ... -->

</BorderPane>
